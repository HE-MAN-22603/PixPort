# PixPort - Google Cloud Run Environment Configuration
# Copy this to .env for local testing of Cloud Run configuration

# Flask Configuration
FLASK_ENV=production
FLASK_APP=app.py

# Google Cloud Run Configuration
PORT=8080

# File Upload Configuration
UPLOAD_FOLDER=/tmp/uploads
PROCESSED_FOLDER=/tmp/processed
MAX_CONTENT_LENGTH=16777216  # 16MB limit

# AI Model Configuration
REMBG_MODEL=isnet-general-use
# Alternative models: u2net, u2netp, isnet-general-use, u2net_human_seg

# Memory Optimization for Cloud Run
MALLOC_ARENA_MAX=2
MALLOC_MMAP_THRESHOLD_=131072
MALLOC_TRIM_THRESHOLD_=131072

# Performance Settings
PYTHONUNBUFFERED=1
PYTHONDONTWRITEBYTECODE=1

# Cloud Run Specific
CLOUD_RUN_SERVICE=my-flask-service
CLOUD_RUN_REGION=europe-west1

# Security (if needed)
# SECRET_KEY=your-secret-key-here
# JWT_SECRET=your-jwt-secret-here

# External Services (if using)
# API_KEY=your-api-key
# DATABASE_URL=your-database-url

# Monitoring & Logging
LOG_LEVEL=INFO
ENABLE_HEALTH_CHECKS=true

# Development overrides (remove in production)
# DEBUG=False
# TESTING=False
